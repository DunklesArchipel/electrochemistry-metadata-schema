{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "version", "instrumentation", "electrolyte", "electrodes" ],
    "properties": {
        "version": { "type": "integer" },
        "instrumentation": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": { "type": "string" },
                    "model": { "type": "string" },
                    "manufacturer": { "type": "string" }
                }
            }
        },
        "electrolyte": {
            "type": "object",
            "properties": {
                "components": { 
                    "type": "array",
                    "items": {"$ref": "file:electrochemical_system/component.json"}
                },
                "pH": {
                    "type": "object",
                    "properties": {
                        "value": {"type": "number"},
                        "uncertainty": {"type": "number"}
                    }
                },
                "temperature": {
                    "type": "object",
                    "properties": {
                        "value": {"type": "number"},
                        "unit": {"type": "string"}
                    }
                }
            }
        },
        "electrodes": {
            "type": "array",
            "items": [{"$ref": "file:electrochemical_system/electrode.json"}]
        }
    }  
}
