{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "https://echemdb.org/metadata-schema/0.1.0/curation.schema.json",
    "type": "object",
    "additionalProperties": false,
    "title": "curation",
    "description": "Details on the curation process of data.",
    "required": [ "version", "process" ],
    "properties": {
        "version": { "type": "integer" },
        "process": {
            "type": "array",
            "minItems": 1,
            "items":  { 
                "type": "object",
                "required": [ "role", "name", "date" ],
                "properties": { 
                    "role": {"enum": ["experimentalist", "curator", "reviewer"]},
                    "name": {"type": "string"},
                    "orcid": {"type": "string"},
                    "date": {"type": "string", "format": "date"}
                }
            }
        }
    }  
}
