{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "https://echemdb.org/metadata-schema/0.1.0/source.json#",
    "allOf": [{ "$ref": "#/definitions/Source" }],
    "definitions": {
        "Source": {
            "type": "object",
            "title": "source",
            "additionalProperties": false,
            "required": [
                "citation key",
                "techniques",
                "figure",
                "curve"
            ],
            "properties": {
                "citation key": {
                    "type": "string"
                },
                "url": {
                    "$ref": "./general/url.json"
                },
                "techniques": {
                    "type": "array",
                    "contains": {
                        "type": "string"
                    }
                },
                "figure": {
                    "type": "string"
                },
                "curve": {
                    "type": "string"
                }
            }
        }
    }
}
